<input type="button" id="BringStandardValues" value="帶入標準資料"
       class="btn btn-sm btn-success border-danger"
       style="font-weight: 600;"
       onclick="return IsBringStandardValues('@ActionService.RowData2');" />

<script>
    function IsBringStandardValues(no) {
        if (no == "") {
            Swal.fire({
                title: "<strong>沒有 IEMenu 交易單表頭資料！</strong>",
                text: '沒有 IEMenu 交易單表頭資料！',
                icon: 'error',
                showCancelButton: false,
                focusConfirm: true,
                closeOnConfirm: true,
                confirmButtonText: '<i class="fas fa-check pe-2"></i>確定'
            });

            return false;
        }

        Swal.fire({
            title: "<strong>是否要帶入標準資料？</strong>",
            text: '是否要帶入標準資料到表身資料表？',
            icon: 'question',
            showCancelButton: true,
            focusConfirm: false,
            closeOnConfirm: false,
            confirmButtonText: '<i class="fas fa-check pe-2"></i>確定',
            cancelButtonText: '<i class="fas fa-times pe-2"></i>取消',
        }).then(function (result) {
            if (result.isConfirmed) {
                $.ajax({
                    url: "@Url.Action("BringStandardValues", "IemuTranSub", new { area = "" })",
                    data: { "No": No },
                    type: "POST",
                    dataType: "json",
                }).done(function (value) {
                    if (value.Mode == true) {
                        Swal.fire({
                            title: "<strong>提示訊息</strong>",
                            text: value.Message,
                            icon: 'success',
                            showCancelButton: false,
                            focusConfirm: true,
                            confirmButtonText: '<i class="fas fa-check pe-2"></i>確定',
                        }).then(function (result) {
                            if (result.isConfirmed) {
                                window.location.href = '@Url.Action(ActionService.Index, ActionService.Controller, new { area = "" })';
                            }
                        });
                    }
                    else {
                        Swal.fire('錯誤訊息', value.Message , 'error');
                    }
                    }).fail(function (err) {
                        Swal.fire('錯誤訊息', err, 'error');
                        console.log(err);
                });
            }
        });
    }
</script>
