@model IEnumerable<jb_tools.Models.IemuMainMenus>

@{
    ViewBag.Title = "IEMenu 大分類";
    Layout = "~/Views/Shared/_LayoutIEMenuMaker2.cshtml";
    ViewBag.FunctionAreaTitle = ViewBag.Title;
}

<div class="container-fluid p-1 contentArea">
    <div class="row">
        <div class="col">
            <div class="@ViewBag.tableShowStyle">
                <table class="table table-dark table-striped table-hover table-bordered">
                    <thead class="table-info align-middle">
                        <tr>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.SortNum)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.MainCode)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.McId)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.Ename)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.Remark)
                            </th>
                        </tr>
                    </thead>

                    <tbody class="table-group-divider">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SortNum)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MainCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.McId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ename)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                @*<td>
                                    @Html.ActionLink("修改", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("明細", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("刪除", "Delete", new { id = item.Id })
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
