
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIEMenuMaker.cshtml";
}

<style>
    .btnSetting {
        font-weight: 600;
    }
</style>

<div class="container vh-100 bg-black text-white">
    <div class="row h-75">
        <div class="col">
            <div class="row d-flex justify-content-center align-items-sm-end pt-5 pb-sm-4 mt-4 h-50">
                <div class="col-sm-4 col-xxl-3">
                    <div>
                        @Html.ActionLink("編輯", "EditIemu", "IEMenuMaker", new { area = "" }, new { @class = "btn btn-black d-block py-4 border-danger btnSetting" })
