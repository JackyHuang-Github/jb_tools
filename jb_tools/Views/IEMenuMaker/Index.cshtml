
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIEMenuMaker1.cshtml";
}

<style>
    .btnSetting {
        font-weight: 600;
    }
</style>

<div class="container vh-100 bg-black text-white">
    <div class="row h-75">
        <div class="col">
            <div class="row d-flex justify-content-center align-items-sm-end pt-5 pb-sm-4 mt-4 h-50">
                <div class="col-sm-4 col-xxl-3">
                    <div>
                        @Html.ActionLink("編輯 IEMenu", "Index", "IemuTran", new { area = "" }, new { @class = "btn btn-black d-block py-4 btn-outline-warning btnSetting" })
                    </div>
                </div>
                <div class="col-sm-4 col-xxl-3">
                    <div>
                        @Html.ActionLink("基本資料-大分類", "Index", "IemuMainMenu", new { area = "" }, new { @class = "btn btn-black d-block py-4 btn-outline-primary btnSetting" })
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center align-items-sm-start pb-5 h-50">
                <div class="col-sm-4 col-xxl-3">
                    <div>
                        @Html.ActionLink("基本資料-中分類", "Index", "IemuSubMenu", new { area = "" }, new { @class = "btn btn-black d-block py-4 btn-outline-success btnSetting" })
                    </div>
                </div>
                <div class="col-sm-4 col-xxl-3">
                    <div>
                        @Html.ActionLink("基本資料-細分類", "Index", "IemuDetailMenu", new { area = "" }, new { @class = "btn btn-black d-block py-4 btn-outline-danger btnSetting" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>