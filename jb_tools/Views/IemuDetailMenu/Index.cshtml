@*@model IEnumerable<jb_tools.Models.IemuDetailMenus>*@

@*Jacky 1120726 for 分頁模式*@
@model IPagedList<jb_tools.Models.IemuDetailMenus>

@{
    ViewBag.Title = "IEMenu 細分類";
    Layout = "~/Views/Shared/_LayoutIEMenuMaker2.cshtml";
    ViewBag.FunctionAreaTitle = ViewBag.Title;
}

@section styles {
    @* Jacky 1120726 for 分頁模式專用的 CSS (注意：這裡所使用的是 PagedList_Jacky.css 因為有做微調) *@
    <link href="~/Content/PagedList_Jacky.css" rel="stylesheet" />
}

@section functionAreaRight {
    @* Jacky 1120726 for 分頁模式 *@
    @if (Model.Count() > 0)
    {
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    }
}

<div class="container-fluid p-1 contentArea1">
    <div class="row">
        <div class="col">
            <div class="@ViewBag.TableShowStyle">
                <table class="table table-dark table-striped table-hover table-bordered">
                    <thead class="table-info align-middle">
                        <tr>
                            <th>
                                <div class="mx-1">
                                    @Html.Partial("~/Views/PartialViews/_PartialFormCreate.cshtml")
                                </div>
                            </th>
                            <th class="tableTitle text-center">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().SortNum)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().MainCode)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ScId)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().DetailOrder)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().Program)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().Ename)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ProgramPath)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().PosOrPath2)
                            </th>
                            <th class="tableTitle px-1">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().Remark)
                            </th>
                        </tr>
                    </thead>

                    <tbody class="table-group-divider">
                        @foreach (var item in Model)
                        {
                            ActionService.RowId = item.Id;
                            ActionService.RowData = $"大分類代號 {item.MainCode} > 中分類識別 {item.ScId} > 細分類序號 {item.DetailOrder}";
                            <tr>
                                <td>
                                    <div class="m-1 float-start">
                                        @Html.Partial("~/Views/PartialViews/_PartialFormEdit.cshtml")
                                    </div>

                                    @* Jacky 1120731*@
                                    @*<div class="m-1 float-start">
                                        @Html.Partial("~/Views/PartialViews/_PartialFormDelete.cshtml")
                                    </div>*@
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SortNum)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MainCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ScId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DetailOrder)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Program)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ename)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProgramPath)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PosOrPath2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
